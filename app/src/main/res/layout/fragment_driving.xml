<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".DrivingFragment">


    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="40dp"
        android:fontFamily="@font/glacial_bold"
        android:text="Driving Licence Verification"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView12"
        android:layout_marginStart="35dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/glacial_bold"
        android:text="Enter Driving Licence Number :"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView9"
        android:layout_marginStart="35dp"

        android:layout_marginTop="40dp"
        android:fontFamily="@font/glacial_bold"
        android:text="Upload Licence Image :"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.193"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/licenceImageUpload"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/glacial_regular"
        android:text="Select image by clicking on above box"

        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/licenceImageUpload"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/licenceImageUpload"
        app:layout_constraintTop_toBottomOf="@+id/licenceImageUpload" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="330dp"
        android:layout_height="69dp"
        android:layout_below="@id/et_driving"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/glacial_regular"
        android:text="*Use Full and Clear Driving Licence Image For Upload."
        android:textAlignment="center"
        android:textColor="#616161"

        android:textSize="16dp"

        app:layout_constraintEnd_toEndOf="@+id/et_driving"
        app:layout_constraintHorizontal_bias="0.606"
        app:layout_constraintStart_toStartOf="@+id/et_driving"
        app:layout_constraintTop_toBottomOf="@+id/et_driving" />

    <ImageView
        android:id="@+id/licenceImageUpload"
        android:layout_width="230dp"
        android:layout_height="120dp"
        android:layout_below="@id/textView17"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"


        android:background="@drawable/img_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/et_driving"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textView13"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/new_blue_edittext"

        android:fontFamily="@font/glacial_regular"
        android:gravity="center"

        android:hint="Enter Driving Licence No. Here"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/licenceSubmitBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView11"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:backgroundTint="#004aad"
        android:fontFamily="@font/glacial_bold"
        android:text="Submit"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

</RelativeLayout>